<h1 style='text-align:center'>All Articles</h1>

<ul id="tags" class='list-group' style='text-align:center'>
  <% @tags.each do |tag| %>
    <li class='list-group-item'>
      <%= link_to  tag.name, tag_path(tag), class: 'tag_name', id: 'tag_#{tag.id}' %>
      <i style='float:right'>
      	<%= link_to 'destroy', tag_path(tag),
      					method: :delete,
      					data: {confirm: "Are you sure you want to delete this tag?"},
      					:class =>  'btn btn-danger btn-xs' %></i>
    </li>
  <% end %>
</ul>
